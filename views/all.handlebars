{{#each posts as |post|}}

<div class="card m-4">
    <a href="/posts/{{post.id}}" class="custom-card-link">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h3 class="card-title mx-3">{{post.title}}</h3>
            <h5 class="card-text">Posted by {{post.User.username}} on {{format_date post.createdAt}}</h5>
        </div>
    </a>
</div>

{{/each}}